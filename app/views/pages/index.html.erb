<p style="color: green"><%= notice %></p>

<div class="flex justify-between">
  <h1 class="text-2xl font-bold">Pages</h1>
  <%= link_to "Monitor a New page", new_page_path, class: "border border-gray-200 rounded shadow px-2 hover:bg-gray-100" %>
</div>

<div id="pages">
  <% @pages.each do |page| %>
    <%= render page %>
    <p>
      <%= link_to "Show this page", page %>
    </p>
  <% end %>
</div>


