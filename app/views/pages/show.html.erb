<p style="color: green"><%= notice %></p>


<div class="flex justify-between">
  <h1 class="text-2xl font-bold"><%= link_to "Pages", root_path %> > <%= @page.name %></h1>
  <div class="flex justify-between">
    <%= button_to "Run", page_check_path(@page), class: "border border-gray-200 rounded shadow px-2 py-1 hover:" %>
    <%= link_to "Monitor a new page", new_page_path, class: "border border-gray-200 rounded shadow px-2 py-1 hover:" %>
  </div>
</div>

<div>
  <%= link_to "Edit this page", edit_page_path(@page) %> |
  <%= link_to "Back to pages", pages_path %>
</div>

<%= link_to @page.url, @page.url, class: "text-gray-700", target: :_blank %>

<div class="mt-4">
  <h4>Results</h4>
  <%= render @page.results.order(created_at: :desc) %>
</div>